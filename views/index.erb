<div class="contents">
    <ul>
        <li>
        <% @contents.each do |content| %>
                <li>
                <% unless content.img.empty? %>
                    <h4><%= content.name %></h4>
                    <form action="content/<%= content.id %>/delete" method="post">
                        <button type="submit" class="btn btn-danger">
                          <i class="glyphicon glyphicon-trash"></i>
                        </button>
                    </form>
                    <img src="<%= content.img %>">
                <% end %>
                </li>
        <% end %>
        </li>
    </ul>
</div>
